<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/tertiary_text_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>


    <style name="text_rank" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/blue_light</item>
        <item name="tabIndicatorHeight">3sp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabSelectedTextColor">@color/blue_light</item>
        <item name="tabTextColor">@color/text_color</item>
    </style>


</resources>